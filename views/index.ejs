  <body>
    <div class="peer-section">
      <div>
        <ol>
          <button
            style="
              background-color: Transparent;
              background-repeat: no-repeat;
              border: none;
              cursor: pointer;
              overflow: hidden;
            "
          >
            <i class="far fa-user-circle peer-icon"></i>
          </button>
          <h2>Peer 1</h2>
          <div>
            <button>Connect</button>
            <button>View History</button>
          </div>
        </ol>
